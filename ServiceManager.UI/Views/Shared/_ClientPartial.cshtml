@model ClientDataModel
@{
    ViewData.TemplateInfo.HtmlFieldPrefix = "Client";
}

<div class="row">
    <div class="col-sm-7">
        <div class="row">

            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Patronymic" class="control-label"></label>
                <input asp-for="Patronymic" class="form-control" />
                <span asp-validation-for="Patronymic" class="text-danger"></span>
            </div>

        </div>
    </div>

    <div class="col-sm-5">
        <div class="row">

            <div class="form-group">

                <label asp-for="Email" class="control-label"></label>
                <div class="relative-w">
                    <input asp-for="Email" class="form-control" />
                    <i class="fa fa-at input-abs-icon"></i>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

            </div>

            <div class="form-group">

                <label asp-for="PhoneNumber" class="control-label"></label>
                <div class="relative-w">
                    <input asp-for="PhoneNumber" class="form-control" />
                    <i class="fa fa-phone input-abs-icon"></i>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

            </div>

            <div class="form-group">

                <label asp-for="RoomName" class="control-label"></label>
                <div class="relative-w">
                    <input asp-for="RoomName" class="form-control" />
                    <i class="fa fa-door-closed input-abs-icon"></i>
                    <span asp-validation-for="RoomName" class="text-danger"></span>
                </div>

            </div>

        </div>
    </div>
</div>