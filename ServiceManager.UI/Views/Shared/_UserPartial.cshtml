@model UserModel
@{
    ViewData.TemplateInfo.HtmlFieldPrefix = "User";
    var isNew = Model.Id == default;
}

<div class="row">
    <div>
        <div class="form-group">

            <label asp-for="Login" class="control-label"></label>
            <input asp-for="Login" class="form-control" autocomplete="new-address" />
            <span asp-validation-for="Login" class="text-danger"></span>

        </div>
    </div>

    <div>
        <div class="form-group">

            <label asp-for="Password" class="control-label"></label>
            @if (isNew)
            {
                <input asp-for="Password" required class="form-control" autocomplete="new-password" />
            }
            else
            {
                <input asp-for="Password" class="form-control" autocomplete="new-password" />
            }
            <span asp-validation-for="Password" class="text-danger"></span>

        </div>
    </div>

    <div>
        <div class="form-group">

            <label asp-for="PasswordConfirm" class="control-label"></label>
            @if (isNew)
            {
                <input asp-for="PasswordConfirm" required class="form-control" autocomplete="new-password" />
            }
            else
            {
                <input asp-for="PasswordConfirm" class="form-control" autocomplete="new-password" />
            }
            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>

        </div>
    </div>
</div>