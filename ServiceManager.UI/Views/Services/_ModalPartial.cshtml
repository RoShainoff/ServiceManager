@model ServiceManager.UI.Models.Services.ServiceModel

<div class="modal fade" id="modal-edit" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Сервис</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Save"
                      data-ajax="true"
                      data-ajax-method="POST"
                      data-ajax-success="editModalHide"
                      data-ajax-failure="onFailed">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(x => x.Id)

                    <div class="row">
                        <div class="mb-3 form-group relative-w col-6">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-group relative-w col-6">
                            <label asp-for="ServiceTypeId" class="control-label"></label>
                            <select asp-for="ServiceTypeId" class="form-control selectpicker" asp-items="@(ViewData["ServiceTypes"] as IEnumerable<SelectListItem>)">
                                <option value="">(Не выбрано)</option>
                            </select>
                            <span asp-validation-for="ServiceTypeId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="mb-3 form-group relative-w col-6">
                            <label asp-for="Cost" class="control-label"></label>
                            <div class="input-group mb-3">
                                <input asp-for="Cost" class="form-control" />
                                <span class="input-group-text">руб</span>
                            </div>
                            <span asp-validation-for="Cost" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-group relative-w col-6">
                            <label asp-for="Hours" class="control-label"></label>
                            <div class="input-group mb-3">
                                <input asp-for="Hours" class="form-control" />
                                 <span class="input-group-text">ч</span>
                            </div>
                            <span asp-validation-for="Hours" class="text-danger"></span>
                        </div>
                    </div>
                    <div>
                        <div class="validation" asp-validation-summary="ModelOnly"></div>
                        <button type="submit" class="btn btn-primary btn-rounded btn-iconed">
                            <span>Сохранить</span>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>